<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameLayout"
    android:keepScreenOn="true"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <org.opencv.android.JavaCameraView android:layout_height="fill_parent" android:layout_width="fill_parent"
                                       opencv:camera_id="any" opencv:show_fps="false"
                                       android:id="@+id/tutorial1_activity_java_surface_view"
                                       android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="#9Fffffff"
        android:padding="10dp" />

</FrameLayout>