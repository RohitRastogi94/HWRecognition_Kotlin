<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="BasicAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="BaseEditText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/border_edittext</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BaseEditTextDisabled" parent="BaseEditText">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextWithDropdown" parent="BaseEditTextDisabled">
        <item name="android:drawableEnd">@drawable/ic_down_arrow</item>
    </style>
</resources>
